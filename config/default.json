{
  "file": "default",
  "server": {
    "host": "http://localhost:",
    "port": "8085"
  },
  "session-secret": "boilerplate-secret",
  "client": {
    "password-config": {
      "errorMessage": "Password must be at least 8 characters, have at least one number and at least one upper-case letter",
      "rules": "^.*(?=.{8,})(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).*$"
    },
    "email-config": {
      "errorMessage": "Must be a valid email address",
      "rules": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$"
    },
    "phoneConfig": {
      "errorMessage": "Must be a valid phone number",
      "rules": "^[- +()]*[0-9][- +()0-9]*"
    },
    "firstname-config": {
      "minLength": {
        "errorMessage": "Must be 2 characters or more",
        "rules": 2
      }
    },
    "lastname-config": {
      "minLength": {
        "errorMessage": "Must be 2 characters or more",
        "rules": 2
      }
    }
  }
}